<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Not Found</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: black;
        }
        .no-data-box {
            padding: 20px;
            border-radius: 5px;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            animation: changeShadowColor 5s infinite;
        }
        @keyframes changeShadowColor {
            0% {
                box-shadow: 0 0 20px rgba(255, 0, 0, 0.6);
            }
            25% {
                box-shadow: 0 0 20px rgba(0, 255, 0, 0.6);
            }
            50% {
                box-shadow: 0 0 20px rgba(0, 0, 255, 0.6);
            }
            75% {
                box-shadow: 0 0 20px rgba(255, 255, 0, 0.6);
            }
            100% {
                box-shadow: 0 0 20px rgba(255, 0, 255, 0.6);
            }
        }
    </style>
</head>
<body>
    <div class="no-data-box">
        <h1>User Not Found</h1>
        <p>No records available.</p>
    </div>
    <script>
        const noDataBox = document.querySelector('.no-data-box');

        function getRandomColor() {
            const letters = '0123456789ABCDEF';
            let color = '#';
            for (let i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        function changeBoxShadowColor() {
            const color = getRandomColor();
            noDataBox.style.boxShadow = `0 0 20px ${color}`;
        }

        setInterval(changeBoxShadowColor, 1000); // Change color every 1 second
    </script>
</body>
</html>
